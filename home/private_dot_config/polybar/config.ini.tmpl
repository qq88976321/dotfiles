[colors]
background = #282A2E
background-alt = #373B41
foreground = #C5C8C6
primary = #F0C674
secondary = #8ABEB7
highlight = #A54242
alert = #A54242
disabled = #707880

[bar/base]
monitor = ${env:MONITOR:}

width = 100%

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2pt

module-margin = 1

; font-N = <fontconfig pattern>;<vertical offset>
font-0 = "MesloLGS NF:style=Regular;2"

enable-ipc = true

; dpi = 96

[bar/top]
inherit = bar/base

height = 24pt
separator = |
separator-foreground = ${colors.disabled}
modules-center = dunst date
modules-right = pulseaudio-control-input pulseaudio-control-output
tray-position = right
tray-padding = 10

[bar/bottom]
inherit = bar/base
bottom = true
height = 18pt
background = #000000

separator = |

modules-left = xworkspaces i3
modules-right = cpu memory wlan eth powermenu

[module/i3]
type = internal/i3
format = <label-mode>

label-mode-background = ${colors.background-alt}
label-mode-underline= ${colors.primary}
label-mode-padding = 1


[module/xworkspaces]
pin-workspaces = true

type = internal/xworkspaces
reverse-scroll = true

label-active = %name%
label-active-background = ${colors.background-alt}
label-active-underline= ${colors.primary}
label-active-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1


[module/cpu]
type = internal/cpu
interval = 5
format-prefix = " "
format-prefix-foreground = ${colors.primary}

label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 5
format-prefix = " "
format-prefix-foreground = ${colors.primary}

label = %percentage_used:2%%


[module/date]
type = internal/date
interval = 1

date = %Y/%m/%d(%a) %H:%M:%S

label = %{A1:LC_ALL=en_US.UTF-8 gsimplecal:} %date% %{A}
label-foreground = ${colors.primary}


[network-base]
type = internal/network
interval = 5

format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colors.disabled}

label-disconnected = %ifname%
label-disconnected-padding = 1

[module/wlan]
inherit = network-base
interface-type = wireless

format-connected-prefix = 
format-connected-prefix-foreground = ${colors.primary}
label-connected = %local_ip%
label-connected-padding = 1

format-disconnected-prefix = 睊


[module/eth]
inherit = network-base
interface-type = wired

format-connected-prefix = 
format-connected-prefix-foreground = ${colors.primary}
label-foreground = ${colors.primary}
label-connected = %local_ip%
label-connected-padding = 1

format-disconnected-prefix = 


{{/* FIXME: nickname */}}
[module/pulseaudio-control-output]
; https://github.com/marioortizmanero/polybar-pulseaudio-control
type = custom/script
tail = true
label-foreground = ${colors.primary}

exec = pulseaudio-control --icons-volume "奄 ,奔 , " --icon-muted "ﱝ " --node-nicknames-from "device.description" --format '${VOL_ICON} ${VOL_LEVEL}%' listen
click-right = exec pavucontrol &
click-left = pulseaudio-control togmute
click-middle = pulseaudio-control next-node
scroll-up = pulseaudio-control --volume-max 100 up
scroll-down = pulseaudio-control --volume-max 100 down

[module/pulseaudio-control-input]
; https://github.com/marioortizmanero/polybar-pulseaudio-control
type = custom/script
tail = true
label-foreground = ${colors.primary}

exec = pulseaudio-control  --node-type input --icons-volume "" --icon-muted "" --node-blacklist "*.monitor" --node-nicknames-from "device.description" --format '${VOL_ICON} ${VOL_LEVEL}%' listen
click-right = exec pavucontrol &
click-left = pulseaudio-control --node-type input togmute
click-middle = pulseaudio-control --node-type input next-node
scroll-up = pulseaudio-control --node-type input --volume-max 100 up
scroll-down = pulseaudio-control --node-type input --volume-max 100 down


[module/powermenu]
type = custom/script

exec = "echo "
click-left = ~/.config/polybar/powermenu.sh

label = %output%
label-foreground = ${colors.primary}
label-padding-right = 1


[module/dunst]
type = custom/ipc
initial = 1
format-foreground = ${colors.primary}

hook-0 = echo "%{A1:dunstctl set-paused true && polybar-msg hook dunst 2:}%{A}" &
hook-1 = echo "%{A1:dunstctl set-paused false && polybar-msg hook dunst 1:}%{A}" &
{{- end }}
